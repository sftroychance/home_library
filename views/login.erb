<section id="login">
  <form action="/login", method="post">
    <dl>
      <dt>
        <label for="login">Login name:</label>
      </dt>
      <dd>
        <input name="login" type="text">
      </dd>
      <dt>
        <label for="password">Password:</label>
      </dt>
      <dd>
        <input name="password" type="password">
      </dd>
    </dl>
    <input type="submit" value="Log in">
  </form>
</section>